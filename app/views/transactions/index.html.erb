<div class="container">
  <div class="text-center">
    <h2>Historique des transactions</h2>
    <h2><%= @player.last_name %> <%= @player.first_name %></h2>
    <h4>Crédit actuel : <%= @player.credit %> €</h4>
  </div>
  <div>
    <% if @transactions_by_player.empty? %>
      <div class="text-center">
        <i class="fa fa-times" aria-hidden="true" style="color: red;"></i>Aucune transaction n'est enregistrée
      </div>
    <% else %>
      <table class="table table-striped">
        <tr>
          <th>Date</th>
          <th>Motif</th>
          <th>Montant</th>
        </tr>
        <% @transactions_by_player.each do |transaction| %>
          <tr>
            <td><%= transaction.created_at.strftime("%d - %m - %Y ") %></td>
            <td><%= transaction.reason %></td>
            <td align="center"><%= transaction.amount %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
