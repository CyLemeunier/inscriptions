<div class="container">
  <div class="text-center">
    <h2>Tous les joueurs</h2>
    <%= link_to "Ajouter un joueur", new_player_path %>
  </div>
  <table class="table table-striped">
    <tr>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Licence</th>
      <th>Crédit</th>
      <th></th>
    </tr>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.last_name %></td>
        <td><%= player.first_name %></td>
        <td><%= player.licence %></td>
        <td><%= player.credit %></td>
        <td>
          <%= link_to edit_player_path(player) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
